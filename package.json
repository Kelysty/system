  },
  "bugs": {
    "url": "https://github.com/Kelysty/npm-template.git/issues"
  },
  "homepage": "https://github.com/Kelysty/npm-template.git#readme",
  "scripts": {
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build": "npm run build:clean && tsc",
    "build:clean": "trash ./dist",
    "typecheck": "tsc --noEmit",
    "lint": "npm run lint:js && npm run lint:styles",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:styles": "stylelint '**/*.{css,scss}' --report-needless-disables",
    "prettier": "prettier '**/*.{js,md,yaml,yml,json}' --config .prettierrc.js",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@kelysty/eslint-config": "^1.0.0",
    "@kelysty/prettier-config": "^1.0.0",
    "@kelysty/stylelint-config": "^1.0.1",
    "@kelysty/tsconfig": "^1.0.0",
